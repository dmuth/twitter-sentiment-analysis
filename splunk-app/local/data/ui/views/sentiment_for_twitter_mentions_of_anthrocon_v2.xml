<form>
  <label>Sentiment for Twitter Mentions v2</label>
  <fieldset submitButton="false">
    <input type="time" token="time" searchWhenChanged="true">
      <label></label>
      <default>
        <earliest>-24h@h</earliest>
        <latest>now</latest>
      </default>
    </input>
    <input type="dropdown" token="span" searchWhenChanged="true">
      <label>Span</label>
      <choice value="1m">1  Min</choice>
      <choice value="5m">5 Min</choice>
      <choice value="15m">15 Min</choice>
      <choice value="1h">1 Hour</choice>
      <choice value="3h">3 Hours</choice>
      <choice value="6h">6 Hours</choice>
      <choice value="1d">1 Day</choice>
      <default>1h</default>
    </input>
    <input type="dropdown" token="tweet_contains" searchWhenChanged="true">
      <label>Tweet Contains</label>
      <choice value="*">ANY</choice>
      <choice value="alley">Alley</choice>
      <choice value="art show">Art Show</choice>
      <choice value="dealer">Dealer</choice>
      <choice value="hotel">Hotel</choice>
      <choice value="parade">Parade</choice>
      <choice value="security">Security</choice>
      <default>*</default>
    </input>
    <input type="dropdown" token="high" searchWhenChanged="true">
      <label>High-Confidence Tweets Only</label>
      <choice value="">No</choice>
      <choice value="| where confidence &gt;= 60">Yes</choice>
      <default></default>
    </input>
  </fieldset>
  <row>
    <panel>
      <title>Sentiment Over Time by Percentage /w/ Tweet Volume Overlaid</title>
      <chart>
        <search>
          <query>index=main sourcetype="3-tweets-export-log" tweet="*$tweet_contains$*" | eval confidence = round(case(sentiment=="POSITIVE", score_positive, sentiment=="NEGATIVE", score_negative, sentiment=="MIXED", score_mixed, sentiment=="NEUTRAL", score_neutral) * 100, 2) $high$ | where in (sentiment, "POSITIVE", "NEUTRAL", "NEGATIVE")  | timechart span=$span$ count(sentiment)  by sentiment | addtotals |rename Total as "Total Tweets"</query>
          <earliest>$time.earliest$</earliest>
          <latest>$time.latest$</latest>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="charting.axisLabelsX.majorLabelStyle.overflowMode">ellipsisNone</option>
        <option name="charting.axisLabelsX.majorLabelStyle.rotation">0</option>
        <option name="charting.axisTitleX.visibility">collapsed</option>
        <option name="charting.axisTitleY.visibility">visible</option>
        <option name="charting.axisTitleY2.visibility">visible</option>
        <option name="charting.axisX.abbreviation">none</option>
        <option name="charting.axisX.scale">linear</option>
        <option name="charting.axisY.abbreviation">none</option>
        <option name="charting.axisY.scale">linear</option>
        <option name="charting.axisY2.abbreviation">none</option>
        <option name="charting.axisY2.enabled">1</option>
        <option name="charting.axisY2.minimumNumber">0</option>
        <option name="charting.axisY2.scale">inherit</option>
        <option name="charting.chart">area</option>
        <option name="charting.chart.bubbleMaximumSize">50</option>
        <option name="charting.chart.bubbleMinimumSize">10</option>
        <option name="charting.chart.bubbleSizeBy">area</option>
        <option name="charting.chart.nullValueMode">zero</option>
        <option name="charting.chart.overlayFields">"Total Tweets"</option>
        <option name="charting.chart.showDataLabels">none</option>
        <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
        <option name="charting.chart.stackMode">stacked100</option>
        <option name="charting.chart.style">shiny</option>
        <option name="charting.drilldown">none</option>
        <option name="charting.layout.splitSeries">0</option>
        <option name="charting.layout.splitSeries.allowIndependentYRanges">0</option>
        <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
        <option name="charting.legend.mode">standard</option>
        <option name="charting.legend.placement">bottom</option>
        <option name="charting.lineWidth">2</option>
        <option name="charting.seriesColors">[0xFF4444, 0x666666, 0x22ff22, 0x0000dd]</option>
        <option name="refresh.display">progressbar</option>
        <option name="trellis.enabled">0</option>
        <option name="trellis.scales.shared">1</option>
        <option name="trellis.size">medium</option>
      </chart>
    </panel>
  </row>
  <row>
    <panel>
      <title>Tweet Volume by Sentiment Over Time</title>
      <chart>
        <search>
          <query>index=main sourcetype="3-tweets-export-log" tweet="*$tweet_contains$*" sentiment=* | eval confidence = round(case(sentiment=="POSITIVE", score_positive, sentiment=="NEGATIVE", score_negative, sentiment=="MIXED", score_mixed, sentiment=="NEUTRAL", score_neutral) * 100, 2) $high$ | where in (sentiment, "POSITIVE", "NEUTRAL", "NEGATIVE") |timechart span=$span$ count by sentiment</query>
          <earliest>$time.earliest$</earliest>
          <latest>$time.latest$</latest>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="charting.axisLabelsX.majorLabelStyle.overflowMode">ellipsisNone</option>
        <option name="charting.axisLabelsX.majorLabelStyle.rotation">0</option>
        <option name="charting.axisTitleX.visibility">collapsed</option>
        <option name="charting.axisTitleY.visibility">visible</option>
        <option name="charting.axisTitleY2.visibility">visible</option>
        <option name="charting.axisX.abbreviation">none</option>
        <option name="charting.axisX.scale">linear</option>
        <option name="charting.axisY.abbreviation">none</option>
        <option name="charting.axisY.scale">linear</option>
        <option name="charting.axisY2.abbreviation">none</option>
        <option name="charting.axisY2.enabled">0</option>
        <option name="charting.axisY2.scale">inherit</option>
        <option name="charting.chart">column</option>
        <option name="charting.chart.bubbleMaximumSize">50</option>
        <option name="charting.chart.bubbleMinimumSize">10</option>
        <option name="charting.chart.bubbleSizeBy">area</option>
        <option name="charting.chart.nullValueMode">gaps</option>
        <option name="charting.chart.showDataLabels">none</option>
        <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
        <option name="charting.chart.stackMode">stacked</option>
        <option name="charting.chart.style">shiny</option>
        <option name="charting.drilldown">none</option>
        <option name="charting.layout.splitSeries">0</option>
        <option name="charting.layout.splitSeries.allowIndependentYRanges">0</option>
        <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
        <option name="charting.legend.mode">standard</option>
        <option name="charting.legend.placement">bottom</option>
        <option name="charting.lineWidth">2</option>
        <option name="charting.seriesColors">[0xFF6666, 0xaaaaaa, 0x66ff66]</option>
        <option name="refresh.display">progressbar</option>
        <option name="trellis.enabled">0</option>
        <option name="trellis.scales.shared">1</option>
        <option name="trellis.size">medium</option>
      </chart>
    </panel>
  </row>
  <row>
    <panel>
      <title>Recent Positive Tweets</title>
      <table>
        <search>
          <query>index=main sourcetype="3-tweets-export-log" sentiment=POSITIVE tweet="*$tweet_contains$*" | reltime | eval confidence = round(case(sentiment=="POSITIVE", score_positive, sentiment=="NEGATIVE", score_negative, sentiment=="MIXED", score_mixed, sentiment=="NEUTRAL", score_neutral) * 100, 2) $high$  | head 10 | table reltime username confidence tweet | rename Reltime AS "Time Ago", username AS Username, confidence AS Confidence, tweet AS Tweet</query>
          <earliest>$time.earliest$</earliest>
          <latest>$time.latest$</latest>
        </search>
        <option name="count">10</option>
        <option name="drilldown">none</option>
        <option name="refresh.display">progressbar</option>
      </table>
    </panel>
    <panel>
      <title>Recent Negative Tweets</title>
      <table>
        <search>
          <query>index=main sourcetype="3-tweets-export-log" sentiment=NEGATIVE tweet="*$tweet_contains$*" |reltime | eval confidence = round(case(sentiment=="POSITIVE", score_positive, sentiment=="NEGATIVE", score_negative, sentiment=="MIXED", score_mixed, sentiment=="NEUTRAL", score_neutral) * 100, 2) $high$ | head 10 | table reltime username confidence tweet | rename Reltime AS "Time Ago", username AS Username, confidence AS Confidence, tweet AS Tweet</query>
          <earliest>$time.earliest$</earliest>
          <latest>$time.latest$</latest>
        </search>
        <option name="count">10</option>
        <option name="drilldown">none</option>
        <option name="refresh.display">progressbar</option>
      </table>
    </panel>
  </row>
</form>
