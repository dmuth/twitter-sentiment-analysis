<form>
  <label>Top Promoters and Detractors</label>
  <fieldset submitButton="false">
    <input type="time" token="field1">
      <label></label>
      <default>
        <earliest>-24h@h</earliest>
        <latest>now</latest>
      </default>
    </input>
    <input type="dropdown" token="high" searchWhenChanged="true">
      <label>High-Confidence Tweets Only</label>
      <choice value="">No</choice>
      <choice value="| where confidence &gt;= 60">Yes</choice>
      <default></default>
    </input>
  </fieldset>
  <row>
    <panel>
      <title>Top Promoters</title>
      <table>
        <search>
          <query>index=main sourcetype="3-tweets-export-log" sentiment=POSITIVE |eval confidence = round(case(sentiment=="POSITIVE", score_positive, sentiment=="NEGATIVE", score_negative, sentiment=="MIXED", score_mixed, sentiment=="NEUTRAL", score_neutral) * 100, 2)  $high$ | stats count(username) AS count by username |sort -count |head 20 |rename username AS Username, count AS Count</query>
          <earliest>$field1.earliest$</earliest>
          <latest>$field1.latest$</latest>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="count">20</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">none</option>
        <option name="percentagesRow">false</option>
        <option name="refresh.display">progressbar</option>
        <option name="rowNumbers">false</option>
        <option name="totalsRow">false</option>
        <option name="wrap">true</option>
      </table>
    </panel>
    <panel>
      <title>Top Detractors</title>
      <table>
        <search>
          <query>index=main sourcetype="3-tweets-export-log" sentiment=NEGATIVE |eval confidence = round(case(sentiment=="POSITIVE", score_positive, sentiment=="NEGATIVE", score_negative, sentiment=="MIXED", score_mixed, sentiment=="NEUTRAL", score_neutral) * 100, 2)  $high$ | stats count(username) AS count by username |sort -count |head 20 |rename username AS Username, count AS Count</query>
          <earliest>$field1.earliest$</earliest>
          <latest>$field1.latest$</latest>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="count">100</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">none</option>
        <option name="percentagesRow">false</option>
        <option name="refresh.display">progressbar</option>
        <option name="rowNumbers">false</option>
        <option name="totalsRow">false</option>
        <option name="wrap">true</option>
      </table>
    </panel>
  </row>
</form>